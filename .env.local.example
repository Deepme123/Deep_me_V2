# Local template (Docker Postgres)
# docker-compose.yml values:
# - user: deepme
# - password: deepme_pw
# - database: deepme_db
# - host: localhost
# - port: 5432

# Required
DATABASE_URL=postgresql+psycopg2://deepme:deepme_pw@localhost:5432/deepme_db

# DB policy
DATABASE_DRIVER=psycopg2
DB_SSLMODE=

# Runtime mode
ENV=dev
APP_ENV=local

# Local CORS
CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional LLM
OPENAI_API_KEY=
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=800

# Optional Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Optional auth/security overrides
JWT_SECRET_KEY=deepme-secret-key
JWT_REFRESH_SECRET=dev_refresh_secret_change_me
COOKIE_SECURE=false
